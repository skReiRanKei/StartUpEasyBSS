@using EasyBBS.Models
@using System.Web.Optimization;
@model EasyBBS.Models.RegisterViewModel
@{
    ViewBag.Title = "登録";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<body>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", id = "register-form", @class = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h3 class="text-center text-info">新規登録</h3>
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "text-info" })<br>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "メールアドレス" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "text-info" })<br>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "パスワード" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-info" })<br>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "パスワード（確認）" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-info btn-md">登録</button>
                            </div>
                            <div id="login-link" class="text-right">
                                @Html.ActionLink("ログインはこちら", "Login", null, new { @class = "text-info" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}